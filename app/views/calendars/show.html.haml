%h1 Calendars#show
%h2.title= @calendar.title
%p.description= @calendar.description
.description
.share
  = link_to "Share", "https://www.facebook.com/sharer/sharer.php?u=#{u(request.protocol)}#{u(request.host_with_port)}#{u(request.fullpath)}" 
.tweet
  = link_to "Tweet", "https://twitter.com/share", class: "twitter-share-button", data: { via: "wangplao", text: "#{@calendar.title}", url: "#{request.protocol}#{request.host_with_port}#{request.fullpath}" }
